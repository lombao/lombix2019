
export LDFLAGS="-L/usr/pkg/gnutls/lib -L/usr/pkg/nettle/lib"
export CFLAGS="-I/usr/pkg/gnutls/include -I/usr/pkg/nettle/include"
export CXXFLAGS=$CFLAGS

./configure --prefix=$PREFIX                 	\
            --sbindir=$PREFIX/bin		\
            --localstatedir=/var		\
	    --datarootdir=$DATAROOTDIR		\
 	    --with-logdir=/var/log/squid	\
            --with-pidfile=/run/squid.pid	\
            --with-swapdir=/var/cache/squid	\
	    --disable-nls                      
