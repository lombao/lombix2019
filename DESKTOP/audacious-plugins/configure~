
export LDFLAGS="-L/usr/pkg/icu/lib -L/usr/pkg/libsamplerate/lib -L/usr/pkg/faac/lib -L/usr/pkg/faad2/lib -L/usr/pkg/X11/lib -L/usr/pkg/cairo/lib"
export CFLAGS="-I/usr/pkg/icu/include -I/usr/pkg/libsamplerate/include -I/usr/pkg/faac/include -I/usr/pkg/faad2/include -I/usr/pkg/X11/include -I/usr/pkg/cairo/include"
export CXXFLAGS=$CFLAGS
./configure --prefix=$PREFIX \
            --datarootdir=$DATAROOTDIR 	\
	    --enable-alsa		\
	    --enable-vorbis		\
	    --enable-flac		\
	    --enable-mpg123		\
 	    --enable-sndfile		\
	    --enable-neon		\
	    --enable-aac		\
	    --disable-wavpack

